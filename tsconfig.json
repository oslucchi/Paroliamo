{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,      // Avoid conflicts with @types
    "strict": true,            // Optional: Enable for stricter checks
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["src/**/*"],     // Explicitly define files to compile
  "exclude": ["node_modules"]
}